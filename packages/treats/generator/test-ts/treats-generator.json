{
    "before": [
        {
            "command": "message",
            "options": {
                "message": "Treats Generator - Test"
            }
        }
    ],
    "prompt": {
        "TEST_DIRECTORY": {
            "description": "Test directory",
            "default": "./src/test",
            "required": "false"
        },
        "TEST_NAME": {
            "description": "Test filename",
            "pattern": "^[a-zA-Z\\s\\-]+$",
            "default": "my-test",
            "message": "Description must be only letters, number, dash, or space"
        },
        "TEST_DESCRIPTION": {
            "description": "Test description",
            "type": "array",
            "pattern": "^[a-zA-Z0-9\\s\\-\\_]+$",
            "message": "Description must be only letters, number, dash, space, or underscore",
            "required": false
        }
    },
    "beforeGenerate": [
        {
            "command": "cd",
            "options": {
                "cwd": "<%TEST_DIRECTORY%>"
            }
        }
    ]
}
