{
    "before": [
        {
            "command": "message",
            "options": {
                "message": "Welcome to Treats! Let's setup your app, shall we?"
            }
        }
    ],
    "options": {
        "confirmation": false
    },
    "prompt": {
        "APP_NAME": {
            "description": "Application name",
            "pattern": "^[a-zA-Z\\s\\-]+$",
            "default": "my-ts-treats-app",
            "message": "Name must be only letters, spaces, or dashes",
            "required": true
        },
        "APP_VERSION": {
            "description": "Application version",
            "pattern": "^[0-9\\-.]+$",
            "default": "0.0.1",
            "message": "Application Version may only contains 0-9, - and .",
            "required": false
        },
        "APP_DESCRIPTION": {
            "description": "Application description",
            "default": "My First Treats App in Typescript",
            "required": false
        }
    },
    "after": [
        {
            "command": "install",
            "options": {
                "cwd": "./<%APP_NAME%>"
            }
        }
    ]
}
